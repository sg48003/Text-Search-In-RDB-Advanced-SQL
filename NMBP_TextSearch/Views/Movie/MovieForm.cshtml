@model NMBP_TextSearch.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = "New movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/css")

<h2>New Movie</h2>
<hr />
@using (Html.BeginForm("Create", "Movie"))
{       
    <div class="form-horizontal">

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(m => m.Movie.Title)
                @Html.TextBoxFor(m => m.Movie.Title, new { @class = "form-control", @style = "width: 100%; max-width: 100%;" })
                @Html.ValidationMessageFor(m => m.Movie.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(m => m.Movie.Category)
                @Html.TextBoxFor(m => m.Movie.Category, new { @class = "form-control", @style = "width: 100%; max-width: 100%;" })
                @Html.ValidationMessageFor(m => m.Movie.Category, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(m => m.Movie.Summary)
                @Html.TextAreaFor(m => m.Movie.Summary, new { @class = "form-control", @style = "width: 100%; max-width: 100%;" })
                @Html.ValidationMessageFor(m => m.Movie.Summary, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(m => m.Movie.Description)
                @Html.TextAreaFor(m => m.Movie.Description, new { @class = "form-control", @style = "width: 100%; max-width: 100%;" })
                @Html.ValidationMessageFor(m => m.Movie.Description, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>

     @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/toastr")
}